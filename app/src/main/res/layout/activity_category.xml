<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category_Activity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150sp">

        <Button
            android:id="@+id/dessert_btn"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="#6f00ff"
            android:fontFamily="casual"
            android:text="Desserts"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/mdishes_btn"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="#6f00ff"
            android:fontFamily="casual"
            android:text="Main Dishes"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150sp">

        <Button
            android:id="@+id/jams_btn"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="#4c00ff"
            android:fontFamily="casual"
            android:text="Jams"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/pickles_btn"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="#FF4C00FF"
            android:fontFamily="casual"
            android:text="Pickles"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150sp">

        <Button
            android:id="@+id/pastries_btn"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="#0051ff"
            android:fontFamily="casual"
            android:text="Pastries"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/appetizers_id"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="#FF0051FF"
            android:fontFamily="casual"
            android:text="Appetizers"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150sp">

        <Button
            android:id="@+id/salads_btn"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="#0090ff"
            android:fontFamily="casual"
            android:text="Salads"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/diaries_btn"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="#0090ff"
            android:fontFamily="casual"
            android:text="Diaries"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold|italic" />
    </LinearLayout>
    </LinearLayout>
</ScrollView>