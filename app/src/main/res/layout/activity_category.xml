<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category_Activity"
    android:id="@+id/drawerLayout"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/navigation_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="60dp"
            android:fontFamily="cursive"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:textStyle="bold|italic" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150sp">

        <Button
            android:id="@+id/dessert_btn"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="#4000ae"
            android:fontFamily="casual"
            android:text="Desserts"
            android:onClick="List"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/mdishes_btn"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="#4000ae"
            android:fontFamily="casual"
            android:text="Main Dishes"
            android:onClick="List"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150sp">

        <Button
            android:id="@+id/jams_btn"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="#4c00ff"
            android:fontFamily="casual"
            android:text="Jams"
            android:onClick="List"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/pickles_btn"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="#FF4C00FF"
            android:fontFamily="casual"
            android:text="Pickles"
            android:onClick="List"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150sp">

        <Button
            android:id="@+id/pastries_btn"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="#0051ff"
            android:fontFamily="casual"
            android:text="Pastries"
            android:onClick="List"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/appetizers_id"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="#FF0051FF"
            android:fontFamily="casual"
            android:text="Appetizers"
            android:onClick="List"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150sp">

        <Button
            android:id="@+id/salads_btn"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="#0090ff"
            android:fontFamily="casual"
            android:text="Salads"
            android:onClick="List"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/dairy_btn"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="#0090ff"
            android:fontFamily="casual"
            android:text="Dairy"
            android:onClick="List"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold|italic" />
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        app:headerLayout="@layout/navigation_header"
        android:layout_gravity="start"
        ></android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>